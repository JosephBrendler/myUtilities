d_right_status $TRUE 3

d_message_n "sourcing BPN ..." 3
source /etc/joetoobuild-tools/BPN || die "failed to source BPN"
d_right_status $TRUE 3

d_message_n "sourcing script_header_joetoo_extended ..." 3
