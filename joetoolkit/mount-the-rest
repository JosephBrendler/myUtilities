mount /dev/mapper/vg_sdb2-home /mnt/gentoo/home
mount /dev/mapper/vg_ssd-opt /mnt/gentoo/opt
mount /dev/mapper/vg_ssd-tmp /mnt/gentoo/tmp
mount /dev/mapper/vg_ssd-usr /mnt/gentoo/usr
mount /dev/mapper/vg_ssd-var /mnt/gentoo/var

mount /dev/sda3 /mnt/gentoo/boot

mount -t proc proc /mnt/gentoo/proc
mount --rbind /sys /mnt/gentoo/sys
mount --rbind /dev /mnt/gentoo/dev
