# BUILD should not contain whitespace, since it is used in naming the initramfs image file
#BUILD="4.0.0.1-20161109"
#KERNEL_VERSION="4.4.26-gentoo"
KERNEL_VERSION="$(uname -r)"  # note: this will name the initramfs after the running kernel
DATE_STAMP="$(date +%Y%m%d%H%M)"
BUILD="${KERNEL_VERSION}-${DATE_STAMP}"
SOURCES_DIR="/usr/src/initramfs"
MAKE_DIR=$(pwd)

