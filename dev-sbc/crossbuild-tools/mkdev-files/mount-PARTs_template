for part in ${partition_list[@]} ; do
  # use -p to mkdir b/c mountpoint could be deep (e.g. /boot/efi rather than /efi)
  eval "pmp=\${${part}_mountpoint}"
  eval "uuid=\${${part}_uuid}"
  [ ! -d ${mountpoint%/}${pmp} ] && echo "mkdir -p ${mountpoint%/}${pmp} ..." && mkdir -p ${mountpoint%/}${pmp}
  mount UUID=$uuid ${mountpoint%/}/${pmp}
done
