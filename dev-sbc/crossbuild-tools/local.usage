#!/bin/bash
# source crossbuild-tools - specific usage-module which should be built in the same format
# this file must contain legitimate bash assignments and commands
# it will be sourced by the using script via the sourcing of script_header_joetoo_extended usage() function
# Note: options i, n, s, r, v, q are already used by the default cmdline processor
message "  -c | --create....: clean, create, populate a target/board crossbuild environment"
message "  -d | --destroy...: just clean target/board environment"
message "  -b | --board <BOARD>.....: specify BOARD (selects crossbuild TARGET / mkdev source)"
message "  -t | --target <TARGET>...: specify crossbuild TARGET / mkdev source"
message "  -o | --outputdevice <OUTPUTDEVICE>..: specify DEVICE to be formatted and flashed"
echo
message "${BMon}notes:${Boff}"
message "  ${BYon}(1) exactly one <BOARD> may be specified.  ${LBon}Examples:${Boff}"
message "      generic-armv6j"
message "      generic-armv7a"
message "      generic-aarch64"
message "      bcm2708-rpi-b"
message "      bcm2709-rpi-2-b"
message "      bcm2710-rpi-3-b"
message "      bcm2710-rpi-3-b-plus"
message "      bcm2711-rpi-4-b"
message "      bcm2711-rpi-cm4-io"
message "      bcm2712-rpi-5-b"
message "      bcm2712-rpi-cm5-cm5io"
message "      rk3288-tinker-s"
message "      rk3399-tinker-2"
message "      rk3399-rock-pi-4c-plus"
message "      rk3588-rock-5b"
message "      rk3588s-orangepi-5"
message "      rk3588s-rock-5c"
message "      meson-gxl-s905x-libretech-cc-v2"
message "      meson-g12b-a311d-libretech-cc"
message "      fsl-imx8mq-phanbell"
echo
message "  ${BYon}(2) exactly one <TARGET> will be selected automatically. Examples:${Boff}"
message "      aarch64-unknown-linux-gnu"
message "      armv6j-unknown-linux-gnueabihf"
message "      armv7a-unknown-linux-gnueabihf"
echo
message "${BMon}additional notes:${Boff}"
message " ${LBon}(1) crossbuild TARGET, BOARD, function as de facto SOURCES for cb-mkdev, ${Boff}"
message " ${LBon}    and are expected to be set up prior to running cb-flash-device${Boff}"
message " ${LBon}(2) OUTPUTDEVICE functions as a defacto output target for cb-mkdev, and${Boff}"
message " ${LBon}    cb-flash-device will expect it to formatted, (if luks, unlocked) and${Boff}"
message " ${LBon}    ready to be mounted for flashing${Boff}"
message " ${LBon}(3) OUTPUTDEVICE's bootloader (grub menu, config.txt, joetooEnv.txt, etc)${Boff}"
message " ${LBon}    and /etc/fstab will need to be updated after the image is flashed to${Boff}"
message " ${LBon}    this new block device${Boff}"
echo
message "${BMon}find additionl information at /etc/crossbuild-tools/README"
