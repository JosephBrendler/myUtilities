>dev-build/libtool-2.4.6-r6 -~arm
#<=sys-devel/libtool-2.4.6-r6 ~arm
<=dev-build/libtool-2.4.6-r6 ~arm
>sys-devel/gcc-11.2.1_p20220115 -~arm
<=sys-devel/gcc-11.2.1_p20220115 ~arm
>sys-kernel/linux-headers-5.16 -~arm
<=sys-kernel/linux-headers-5.16 ~arm
>sys-devel/gcc-config-2.5-r1 -~arm
<=sys-devel/gcc-config-2.5-r1 ~arm

