uecho() { LC_CTYPE=en_US.UTF-8 echo -e -n $@ ; }
emoji() { uecho "\U${1}" ; }
bremojis() { echo -n "["; for each in $@; do emoji "${each}"; done; echo -n "]" ; }

bremojis2() { payload=""; echo -n "["; for each in $@; do payload+="\U${each}"; done; uecho ${payload}; echo -n "]" ; }

