# prefix message with bracketted emoji(s)
separator "initial test"
for x in "$bat" "$penguin" "$mouse" "$shovel" "$hand $light" "$thumbup $medium"; do
    bremojis "${x}"
    message "hello, Joe"
done

separator "icon_list"
for icon in ${icon_list[@]} ; do
    # syntax ${!x} substitutes the value of the variable named  x
    echo
    title="${icon}: [${!icon}]"
    echo $title
    echo $(repeat '-' ${#title})
    bremojis "${!icon}" ; message "hello"
done

echo
separator "multi-tone part_list"
for part in ${part_list[@]} ; do
    for (( i=0; i<${#tone_list[@]}; i++)) ; do
        # syntax ${!x} substitutes the value of the variable named  x
        echo
        title="${part} ${tone_names[$i]}: [${!part} ${tone_list[$i]}] "
        echo $title
        echo $(repeat '-' ${#title})
        bremojis "${!part} ${tone_list[$i]}" ; message "hello"
    done
done
