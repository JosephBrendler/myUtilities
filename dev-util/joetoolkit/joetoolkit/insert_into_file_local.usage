#!/bin/bash
# source user-script specific usage-module which should be built in the same format
# this file must contain legitimate bash assignments and commands
# it will be sourced by the script_header_joetoo_extended usage() function
# Note: options i, n, s, r, v, q are already used by the default cmdline processor
message "${BYon}  Note: -n (unsuperviced) and -r (resume) functionality is disabled for ${PN}${Boff}"
message "  -p | --pretend ..........: do not write output to file(default)"
message "  -w | --write ............: do write output to file"
echo
message "${BYon}No other arguments are allowed - specify configuration${Boff}"
message "  ${BYon}in confg file /etc/${PN}/${PN}.conf${Boff}"
message "    target_folder......: path to folder containing target(s)"
message "    target_file_list...: name of target file(s). e.g. *.conf"
message "    target_line_text...: text of line before/after which to insert"
message "    insert_file........: pathname of file with content to insert"
message "    before_after.......: \"before\" or \"after\" (default=after)"
message "    owner..............: target file owner. e.g. \"joe\""
message "    group..............: target file group. e.g. \"joe\""
message "    VERBOSE............: provide verbose output (boolean)"
message "    verbosity..........: (0-6) how verbose"
echo
message "  ${Mon}Note:${Boff}"
message "    ${Mon} user and group must exist${Boff}"
message "    ${Mon} target_folder and insert_file must exist${Boff}"
message "    ${Mon} target_file_list and target_line_text cannot be null${Boff}"
