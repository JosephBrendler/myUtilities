#!/bin/bash
# updated 9/13/2025 - switched from copying *.crt to * (to get e.g. .pem files as well)
[[ ! -e /usr/local/share/ca-certificates ]] && mkdir -p /usr/local/share/ca-certificates/
[[ -d /usr/local/sbin/server_certs ]] && cp -av /usr/local/sbin/server_certs/* /usr/local/share/ca-certificates/
[[ -d /usr/sbin/server_certs ]] && cp -av /usr/sbin/server_certs/* /usr/local/share/ca-certificates/
[[ -d /usr/share/joetoolkit/server_certs ]] && cp -av /usr/share/joetoolkit/server_certs/* /usr/local/share/ca-certificates/

update-ca-certificates
